{
  "name": "jshiki",
  "version": "3.2.0",
  "description": "Lightweight expression evaluation library for Node.js",
  "keywords": [
    "expression",
    "javascript",
    "js",
    "parser",
    "eval",
    "evaluation",
    "evaluator",
    "execution",
    "safe",
    "secure",
    "small",
    "scope",
    "context",
    "runtime",
    "AST",
    "acorn"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && tsc",
    "build-docs": "run-s \"build-docs:*\"",
    "build-docs:api": "typedoc",
    "build-docs:docs": "mike deploy ${VERSION} ${ALIAS}",
    "build-docs-dev": "VERSION=\"main\" ALIAS=\"stage\" yarn build-docs",
    "clean": "tsc --build --clean",
    "install-docs-deps": "pip install --upgrade -r requirements.txt",
    "format": "run-s \"format:*\"",
    "format:eslint": "eslint --ext .js,.ts --fix .",
    "format:prettier": "prettier --write .",
    "lint": "run-s \"lint:*\"",
    "lint:eslint": "eslint --ext .js,.ts .",
    "lint:prettier": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "minify-logo": "svgo assets/logo/*.svg",
    "prepack": "run-s clean build",
    "test": "jest",
    "test:functional": "jest -c functional.local.jest.config.js",
    "test:unit": "jest -c unit.local.jest.config.js",
    "test:watch": "jest --watch",
    "test-ci": "run-s \"test-ci:*\"",
    "test-ci:functional": "jest -c functional.jest.config.js --maxWorkers=2",
    "test-ci:unit": "jest -c unit.jest.config.js --maxWorkers=2",
    "serve-docs-dev": "yarn build-docs-dev && mike serve",
    "watch-docs": "run-p \"watch-docs:*\"",
    "watch-docs:apidocs": "typedoc --preserveWatchOutput --watch",
    "watch-docs:docs": "mkdocs serve"
  },
  "engines": {
    "node": ">=14.0"
  },
  "homepage": "https://adalinesimonian.github.io/jshiki/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adalinesimonian/jshiki.git"
  },
  "author": {
    "name": "Adaline Valentina Simonian",
    "email": "adalinesimonian@gmail.com",
    "url": "https://github.com/adalinesimonian"
  },
  "license": "MIT",
  "packageManager": "yarn@3.0.1",
  "devDependencies": {
    "@types/estree": "^0.0.50",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.17.10",
    "@types/svgo": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "svgo": "^2.4.0",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.21.6",
    "typedoc-neo-theme": "^1.1.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "acorn": "^8.4.1"
  }
}
