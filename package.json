{
  "name": "jshiki",
  "version": "3.4.0",
  "description": "Lightweight expression evaluation library for Node.js",
  "keywords": [
    "expression",
    "javascript",
    "js",
    "parser",
    "eval",
    "evaluation",
    "evaluator",
    "execution",
    "safe",
    "secure",
    "small",
    "scope",
    "context",
    "runtime",
    "AST",
    "acorn"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && tsc",
    "build-docs": "run-s \"build-docs:*\"",
    "build-docs:api": "typedoc",
    "build-docs:docs": "mkdocs build",
    "clean": "tsc --build --clean",
    "install-docs-deps": "pip install --upgrade -r requirements.txt",
    "format": "run-s \"format:*\"",
    "format:eslint": "eslint --ext .js,.ts --fix .",
    "format:prettier": "prettier --write .",
    "lint": "run-s \"lint:*\"",
    "lint:eslint": "eslint --ext .js,.ts .",
    "lint:prettier": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "minify-logo": "svgo assets/logo/*.svg",
    "prepack": "yarn build",
    "test": "jest",
    "test:unit": "jest -c unit.local.jest.config.js",
    "test:functional": "jest -c functional.local.jest.config.js",
    "test:watch": "jest --watch",
    "test-ci": "run-s \"test-ci:*\"",
    "test-ci:unit": "jest -c unit.jest.config.js --maxWorkers=2",
    "test-ci:functional": "jest -c functional.jest.config.js --maxWorkers=2",
    "watch-docs": "run-p \"watch-docs:*\"",
    "watch-docs:apidocs": "typedoc --preserveWatchOutput --watch",
    "watch-docs:docs": "mkdocs serve"
  },
  "engines": {
    "node": ">=14.0"
  },
  "homepage": "https://jshiki.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/adalinesimonian/jshiki.git"
  },
  "author": {
    "name": "Adaline Valentina Simonian",
    "email": "adalinesimonian@gmail.com",
    "url": "https://github.com/adalinesimonian"
  },
  "license": "MIT",
  "packageManager": "yarn@3.0.2",
  "devDependencies": {
    "@types/estree": "0.0.50",
    "@types/jest": "27.0.2",
    "@types/node": "14.17.27",
    "@types/svgo": "2.6.0",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "jest": "27.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "svgo": "2.7.0",
    "ts-jest": "27.0.7",
    "typedoc": "0.22.6",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "acorn": "^8.5.0"
  }
}
