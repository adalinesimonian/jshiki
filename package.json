{
  "name": "jshiki",
  "version": "4.0.0",
  "description": "Lightweight expression evaluation library for Node.js",
  "keywords": [
    "expression",
    "javascript",
    "js",
    "parser",
    "eval",
    "evaluation",
    "evaluator",
    "execution",
    "safe",
    "secure",
    "small",
    "scope",
    "context",
    "runtime",
    "AST",
    "acorn"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && tsc",
    "build-docs": "run-s \"build-docs:*\"",
    "build-docs:api": "typedoc",
    "build-docs:docs": "mkdocs build",
    "clean": "tsc --build --clean",
    "install-docs-deps": "pip install --upgrade -r requirements.txt",
    "format": "run-s \"format:*\"",
    "format:eslint": "eslint --ext .js,.ts --fix .",
    "format:prettier": "prettier --write .",
    "lint": "run-s \"lint:*\"",
    "lint:eslint": "eslint --ext .js,.ts .",
    "lint:prettier": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "minify-logo": "svgo assets/logo/*.svg",
    "prepack": "yarn build",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:functional": "vitest run --project functional",
    "test:watch": "vitest watch",
    "test-ci": "run-s \"test-ci:*\"",
    "test-ci:unit": "CI=true vitest run --project unit --coverage --coverage.reportsDirectory=./coverage/unit --maxWorkers=2",
    "test-ci:functional": "CI=true vitest run --project functional --coverage --coverage.reportsDirectory=./coverage/functional --maxWorkers=2",
    "watch-docs": "run-p \"watch-docs:*\"",
    "watch-docs:apidocs": "typedoc --preserveWatchOutput --watch",
    "watch-docs:docs": "mkdocs serve"
  },
  "engines": {
    "node": ">=24.0"
  },
  "homepage": "https://jshiki.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/adalinesimonian/jshiki.git"
  },
  "author": {
    "name": "Adaline Valentina Simonian",
    "email": "adalinesimonian@pm.me",
    "url": "https://github.com/adalinesimonian"
  },
  "funding": "https://github.com/sponsors/adalinesimonian",
  "license": "MIT",
  "packageManager": "yarn@4.12.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/estree": "1.0.8",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/eslint-plugin": "1.5.1",
    "eslint": "^9.39.1",
    "npm-run-all2": "8.0.4",
    "prettier": "3.7.4",
    "svgo": "4.0.0",
    "typedoc": "0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "4.0.15"
  },
  "dependencies": {
    "acorn": "^8.15.0"
  },
  "volta": {
    "node": "24.11.1",
    "yarn": "4.12.0"
  }
}
